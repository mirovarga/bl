<!DOCTYPE html>

<html>

{{> _head}}

<body>
  {{> _header}}

  <div class="content">
    <h1>{{title}}</h1>

    {{#posts}}
    <article>
      <h1><a href="/{{slug}}.html">{{title}}</a></h1>

      <em>
        {{created}}

        {{#tags}}
        <a href="/tags/{{.}}.html">{{.}}</a>
        {{/tags}}
      </em>

      <p>{{description}}</p>
    </article>
    {{/posts}}
  </div>

  {{> _footer}}
</body>

</html>